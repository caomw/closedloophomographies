function vecToOpenCVXML(x, directory)
    filebase = 'homografia_opt';
    
    h12newvec = [x(1:8); 1];
    
    thisfilebase = sprintf('%s%04d', filebase, 2);
    thisfile = sprintf('%s.xml', thisfilebase);
    fileID = fopen(thisfile, 'w');
    fprintf(fileID, ...
        '<?xml version=\"1.0\"?>\n<opencv_storage>\n<%s type_id=\"opencv-matrix\">\n<rows>3</rows>\n<cols>3</cols>\n<dt>f</dt>\n<data>\n%e %e %e %e\n%e %e %e %e %e </data></%s>\n</opencv_storage>', ...
        thisfilebase, h12newvec, thisfilebase);
    fclose(fileID);
    
    %h23newvec = [x(9:16); 1];
    %h23new = reshape(h23newvec, 3, 3)';
    %h34newvec = [x(17:24); 1];
    %h34new = reshape(h34newvec, 3, 3)';
    %h45newvec = [x(25:32); 1];
    %h45new = reshape(h45newvec, 3, 3)';
    %h56newvec = [x(33:40); 1];
    %h56new = reshape(h56newvec, 3, 3)';
end